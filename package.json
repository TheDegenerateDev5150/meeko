{
  "name": "meeko",
  "version": "1.7.1",
  "description": "meeko自用函数",
  "main": "index.js",
  "scripts": {
    "push": "npm version patch && npm publish . && git push",
    "snazzy": "snazzy *.js ./lib/**/*.js --verbose",
    "test": "mocha -r co-mocha --reporter spec --timeout 100000 --recursive tests/",
    "coveralls": "istanbul cover _mocha -- -r co-mocha --reporter spec --timeout 100000 --recursive tests/ && cat ./coverage/lcov.info | coveralls && rm -rf ./coverage"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/kongnet/meeko.git"
  },
  "author": "Kongnet <9601698@qq.com>",
  "license": "MIT",
  "dependencies": {},
  "devDependencies": {
    "mocha": "*",
    "co-mocha": "*",
    "istanbul": "*",
    "coveralls": "*"
  },
  "standard": {
    "globals": [
      "$",
      "describe",
      "it",
      "define",
      "db"
    ],
    "ignore": [
      "/lib/tpl.js"
    ]
  },
  "eslintConfig": {
    "plugins": [
      "html"
    ],
    "env": {
      "browser": true,
      "node": true,
      "es6": true,
      "mocha": true
    },
    "globals": {
      "angular": true
    },
    "rules": {
      "no-unused-vars": 1,
      "camelcase": 0,
      "curly": 2,
      "brace-style": [
        2,
        "1tbs"
      ],
      "quotes": [
        1,
        "single"
      ],
      "semi": [
        0,
        "always"
      ],
      "space-infix-ops": 1,
      "no-console": 1,
      "complexity": [
        1,
        8
      ]
    },
    "extends": "eslint:recommended"
  }
}
